[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green
  changed = yellow
  untracked = cyan
  deleted = red
[user]
	email = wouter@returnwt.net
	name = Wouter Toering
[alias]
    st = status -s
    ci = commit -v
    cia = commit --amend --no-edit
    br = branch
    co = checkout
    df = diff
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    pl = pull --rebase
    ia = add -p
    chp = cherry-pick
    ri = rebase -i --autosquash
    fu = !sh -c 'REV=$(git rev-parse $1) && echo $1 && git commit --fixup $1 && git rebase -i --autosquash $REV^' -
    fi = !sh -c 'echo $1' -
    ps = push
[push]
	default = upstream
[core]
	editor = nvim
	excludesfile = /Users/wouter/.gitignore_global
[credential]
	helper = osxkeychain
